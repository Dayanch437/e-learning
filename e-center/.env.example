# ==============================================
# ENVIRONMENT CONFIGURATION
# ==============================================
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_SETTINGS_MODULE=config.settings.local

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# LOCAL DEVELOPMENT (SQLite - Default)
# SQLite is automatically used for local development
# No additional configuration needed - database file is created automatically
# DATABASE_URL=sqlite:///db.sqlite3

# PRODUCTION (PostgreSQL - Required)
# Uncomment and configure for production deployment
# Format: postgres://username:password@host:port/database_name
# DATABASE_URL=postgres://myuser:mypass@localhost:5432/mydatabase

# Examples of PostgreSQL URLs:
# Local PostgreSQL: postgres://postgres:password@localhost:5432/e-center
# Heroku: postgres://user:pass@hostname:5432/dbname
# Railway: postgres://postgres:pass@hostname:5432/railway
# AWS RDS: postgres://username:password@rds-instance.amazonaws.com:5432/dbname

# ==============================================
# API & CORS CONFIGURATION
# ==============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==============================================
# STATIC & MEDIA FILES
# ==============================================
MEDIA_URL=/media/
STATIC_URL=/static/

# Production Settings (uncomment and configure for production)
# ENVIRONMENT=production
# DJANGO_SETTINGS_MODULE=config.settings.production
# SECURE_SSL_REDIRECT=True
# CSRF_TRUSTED_ORIGINS=https://yourdomain.com
# REDIS_URL=redis://127.0.0.1:6379/1

# Email Configuration (for production)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Optional: Sentry Configuration
# SENTRY_DSN=your-sentry-dsn-here

# Admin URL (change in production)
# ADMIN_URL=secure-admin-url/